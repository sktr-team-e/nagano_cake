<div class="container"><br>
  <div class="row">
      <h3 style="width: 300px;background-color: #e6e6e6; text-align: center;">注文履歴一覧</h3>
      <% if @orders.present? %>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.postcode %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <% order.order_products.each do |order_product| %>
    		        <%= order_product.product.name %><br>
    		      <% end %>
    		    </td>
            <td>
              <% @sum = 800 %>
              <% order.order_products.each do |order_product| %>
    		        <% @price = (order_product.product.nontaxed_price * 1.10 * order_product.amount).floor %>
						    <% @sum += @price %>
    		      <% end %>
    		      <%= @sum.to_s(:delimited) %>円
            </td>
            <td>
              <%= order.status %>
            </td>
            <td>
              <%= link_to "表示する", order_path(order), class: "btn btn-info" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <% else %>
        <p>注文履歴がありません。</p>
      <% end %>
  </div>
</div>