<div class="container">
  <div class="row">
    <div class="maypage-main">
      <p id="notice"><%= notice %></p>
      <h5 style="background-color: #e6e6e6; text-align: center;">マイページ</h5>
      <div class="mypage-flex-group ">
        <span>登録情報</span>
        <%= link_to '編集する',edit_customer_registration_path, class: "btn btn-success" %>

      </div>
      <table class="row table table-bordered ">
        <tr>
          <th class="active">氏名
          <td><%= @customer.last_name + @customer.first_name %></td>
          </th>
           </tr>
        <tr>
          <th class="active">カナ</th>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>

        </tr>
        <tr>
          <th class="active">郵便番号</th>
          <td><%= @customer.postcode%></td>

        </tr>
        <tr>
          <th class="active">住所</th>
          <td><%= @customer.address%></td>

        </tr>
        <tr>
          <th class="active">電話番号</th>
          <td><%= @customer.phone_number%></td>

        </tr>
        <tr>
          <th class="active">メールアドレス</th>
          <td><%= @customer.email%></td>

        </tr>
      </table>

      <div class="mypage-flex-group">
        <h5>配送先<h5>
        <%= link_to '一覧を見る', addresses_path, class: "btn btn-primary" %>
      </div>
      <P></P>
      <div class="mypage-flex-group">
        <h5>注文履歴<h5>
        <%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
