<h1>商品一覧</h1>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <th><%= product.id %></th>
        <th><%= product.name %></th>
        <th><%= product.nontaxed_price %></th>
        <th>test</th>
        <% if product.is_active == true %>
          <th>販売中</th>
        <% else %>
          <th>販売停止中</th>
        <% end %>
      </tr>

    <% end %>
  </tbody>

</table>