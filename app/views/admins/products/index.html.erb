<h1>商品一覧</h1>
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td>
          <%= link_to admins_product_path(product.id) do %>
            <%= product.name %>
          <% end %>
        </td>
        <td><%= product.nontaxed_price %></td>
        <td>test</td>
        <% if product.is_active == true %>
          <td>販売中</td>
        <% else %>
          <td>販売停止中</td>
        <% end %>
      </tr>

    <% end %>
  </tbody>

</table>