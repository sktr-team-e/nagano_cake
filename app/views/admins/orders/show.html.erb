<%= flash[:success] %>
<%= flash[:success2] %>

<div class='container px-5 px-sm-0'>
	<h2 class="head-line title_h2">注文履歴詳細</h2>
		<p>購入者：<%= link_to admins_customer_path(@customer.id) do%>
	  		<%= @order.customer.last_name %><%= @order.customer.first_name %>
	  		<% end %>
		</p>
		<p>注文日：<%= @order.created_at %></p>
		<p>配送先：<%= @order.postcode %><%= @order.address %><br>
			<%= @order.name %>
		</p>
		<p>支払方法：<%= @order.payment_method %></p>
		<%= form_for(@order, url: admins_order_path, method: :patch) do |f| %>
			<p>注文ステータス：<%= f.select :status, Order.statuses.keys, class: "status" %>
				<%= f.submit '更新'  ,class: "btn btn-success" %>
			</p>
 		 <% end %>

	<div class="buyer-order col-xs-9">
		<table class="table table-hover table-bordered table-inverse">
			<thead>
				<tr class="info">
					<th class="col-xs-4">商品名</th>
					<th>単価（税込）</th>
					<th>数量</th>
					<th>小計</th>
					<th>製作ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @order_products.each do |order_product| %>
				<tr>
					<td class="text-left">
						<%= order_product.product.name %>
					</td>
					<td class="text-right">
						<%= (order_product.product.nontaxed_price * 1.10).floor.to_s(:delimited) %>
					</td>
					<td class="text-right">
						<%= order_product.amount %>
					</td>
					<td class="text-right">
						<%= (order_product.product.nontaxed_price * 1.10 * order_product.amount).floor.to_s(:delimited) %>
					</td>
						<%= form_for(order_product, url: admins_order_product_path(order_product), method: :patch) do |f| %>
					<td>
						<%= f.select :making_status, OrderProduct.making_statuses.keys %>
						<%= f.submit '更新'  ,class: "btn btn-success" %>
					</td>
					<% end %>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class="col-xs-3  billing">
		<table class="table table-hover table-bordered table-condensed">
			<tr>
				<th class="info">商品合計</th>
				<!--<td>¥金額追加</td>-->
			</tr>
			<tr>
				<th class="info">送料</th>
					<td>¥<%= @order.shipping_cost.to_s(:delimited) %></td>
			</tr>
			<tr>
				<th class="info">請求金額合計</th>
				<td>¥<%= 商品合計＋送料</td>-->
			</tr>
		</table>
	</div>

</div>

