<div class='container px-5 px-sm-0'>
  <h2 style="width: 200px;background-color: #e6e6e6; text-align: center;">注文履歴一覧</h2>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admins_order_path(order.id) do %>
            <%= order.created_at %>
            <% end %>
          </td>
          <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
          <td><%= order.order_products.count %></td>
          <td><%= order.status %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
  <div class="text-center"><%= paginate(@orders) %></div>
</div>