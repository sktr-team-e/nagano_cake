<h2>ジャンル一覧・追加</h2>
<div>
  <%= form_with model: @category, url: admins_categories_path, method: :post, local: true do |f| %>
    <p>ジャンル名</p>
    <%= f.text_field :name %>
    <%= f.submit '新規登録' %>
  <% end %>
</div>

<div>
  <table class='table table-hover table-inverse'>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td>
        <%= link_to edit_admins_category_path(category.id) do %>
          <button type="button" class="btn btn-success">編集する</button>
        <% end %>
      </td>
    </tr>
  <% end %>
  </table>
</div>