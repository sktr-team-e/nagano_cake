<div class="container">
  <h4 style="width: 180px;background-color: #e6e6e6; text-align: center;">ログイン</h4>
  <h5 style="width: 300px;background-color: #e6e6e6; text-align: center;">会員の方はこちらからログイン</h5>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row my-4 ml-3">
    <div class="col-2">
      <%= f.label :email, "メールアドレス" %>
    </div>
    <div class="col-8">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", size: 50 %>
    </div>
  </div>
  <div class="row ml-3">
    <div class="col-2">
      <%= f.label :password, "パスワード" %>
    </div>
    <div class="col-8">
      <%= f.password_field :password, autocomplete: "new-password", size: 50 %>
    </div>
  </div>
  <div class="row my-4 ml-2">
    <%= f.button :submit, "ログイン", class: "btn btn-primary btn- center-block" %>
  </div>
<% end %>
  <h5 style="width: 300px;background-color: #e6e6e6; text-align: center;">会員登録がお済みでない方</h5>
  <div class="col-5 ml-3">
  <%= link_to "こちら", "/customers/sign_up" %><span>から新規登録を行ってください。</span>
  </div>
</div>