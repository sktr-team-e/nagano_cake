<h4 style="width: 180px;background-color: #e6e6e6; text-align: center;">新規会員登録</h4>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="field">
      <%= f.label :last_name, "名前　　　　　　　　　　　（姓）　" %><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "令和" %>
      <%= f.label :first_name, "（名）　" %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "道子" %>
    </div><br>

    <div class="field">
      <%= f.label :last_name_kana, "フリガナ　　　　　　　　　（セイ）" %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :placeholder => "レイワ" %>
      <%= f.label :first_name_kana, "（メイ）" %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "ミチコ" %>
    </div><br>

    <div class="field">
      <%= f.label :email, "メールアドレス" %>　　　　　　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com" %>
    </div><br>

    <div class="field">
      <%= f.label :postcode, "郵便番号（ハイフンなし）" %>　　　　　<%= f.text_field :postcode, autofocus: true, autocomplete: "postal_code",  :placeholder => "0000000" %>
    </div><br>

    <div class="field member-address">
      <%= f.label :address, "住所" %>　　　　　　　　　　　　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address",  :placeholder => "東京都渋谷区代々木神園町0-0", size: 50 %>
    </div><br>

      <div class="field">
      <%= f.label :phone_number,"電話番号（ハイフンなし）" %>　　　　　<%= f.text_field :phone_number, autofocus: true, autocomplete: "phone_number", :placeholder => "0000000000" %>
    </div><br>

    <div class="field">
      <%= f.label :password, "パスワード（６文字以上）" %>
      <% if @minimum_password_length %>
      <% end %>　　　　　<%= f.password_field :password, autocomplete: "new-password" %>
    </div><br>

    <div class="field">     
      <%= f.label :password_confirmation, "パスワード（確認用）" %>　　　　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div><br>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success btn center-block" %>
    </div>
  <% end %>
  
  <h5 style="width: 180px;background-color: #e6e6e6; text-align: center;">既に登録済みの方</h5>
  <%= link_to "こちら", new_session_path(resource_name) %><span>からログインしてください。</span>

